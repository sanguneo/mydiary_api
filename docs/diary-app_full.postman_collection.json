        {
          "name": "Verify Email Token",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:7200/auth/verify?token={{token}}&email={{email}}",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "7200",
